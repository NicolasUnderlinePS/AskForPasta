<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProntoPasta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-divs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-texts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-backgrounds.css" asp-append-version="true" />
</head>
<body>
    <header class="py-3 shadow-sm sticky-top bg-primary">
        <div class="container d-flex justify-content-between align-items-center" >
            <a class="navbar-brand fw-bold fs-4 text-primary" href="@Url.Action("Index", "Home")">ProntoPasta</a>
            <nav>
                <a class="btn btn-primary rounded-pill px-4"><i class="fas fa-shopping-cart"></i> Carrinho</a>
                <a href="@Url.Action("Index", "Menu")" class="btn btn-primary rounded-pill px-4"><i class="fas fa-file"></i> Cardárpio</a>
                <a href="@Url.Action("Login", "Access")" class="btn btn-primary rounded-pill px-4"><i class="fas fa-user"></i> Login</a>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-5">
        <div class="container text-center">
            <p class="mb-0">&copy; @(DateTime.Now.Year) ProntoPasta - Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery.mask/jquery.mask.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>