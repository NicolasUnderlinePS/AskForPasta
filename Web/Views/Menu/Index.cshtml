@{
    //Layout = "_LayoutUnauthorized";
    ViewData["Title"] = "Cardápio";
}
<style>
    .menu-div {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: 0.5fr 1fr 1fr 1fr 1fr 0.5fr; /* header e footer com metade da altura */
        grid-column-gap: 0px;
        grid-row-gap: 0px;
        min-height: 100vh;
        border-radius: 1rem;
        /* Sombra inicial mais suave, parecendo um brilho */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.10);
    }

    .left-side-menu-div {
        grid-area: 1 / 1 / 7 / 2;
        background-color: var(--secondary-background-color);
        border-right: 2px solid #dfe6e9;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
    }

    .uper-menu-div {
        grid-area: 1 / 2 / 2 / 6;
        background-color: var(--secondary-background-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        font-weight: bold;
        color: #2d3436;
        border-bottom: 2px solid #dfe6e9;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.1);
    }

    .main-menu-div {
        grid-area: 2 / 2 / 6 / 6;
        background-color: var(--secondary-background-color);
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .bottom-menu-div {
        grid-area: 6 / 2 / 7 / 6;
        background-color: var(--secondary-background-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        font-weight: bold;
        color: #2d3436;
        border-top: 2px solid #dfe6e9;
        box-shadow: 0px -2px 6px rgba(0,0,0,0.1);
    }

    .cardapio-item {
        min-height: 220px;
        min-width: 220px;
        background-color: #ffeaa7;
        border: 2px solid #dfe6e9;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        font-weight: bold;
        box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.2s;
    }

    .cardapio-item:hover {
        transform: scale(1.05);
        cursor: pointer;
    }
</style>

<div class="container">

    <div class="menu-div">
        <div class="left-side-menu-div">Menu lateral</div>
        <div class="uper-menu-div">Cabeçalho</div>
        <div class="main-menu-div">

            @for (int i = 0; i < 12; i++)
            {
                <div class="card card-custom h-100">
                    <img src="https://www.w3schools.com/images/picture.jpg" class="card-img-top" alt="Lasanha de Carne">
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold">Lasanha Clássica</h5>
                        <span class="fs-4 fw-bold d-block my-3">R$ 35,00</span>
                        <a href="#" class="btn btn-primary w-100 rounded-pill">Adicionar ao Carrinho</a>
                    </div>
                </div>
            }

        </div>
        <div class="bottom-menu-div">Rodapé / Menu inferior</div>
    </div>

</div>
